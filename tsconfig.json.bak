{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "rootDir": "../",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["../server/**/*.ts", "../shared/**/*.ts"],
  "exclude": ["../node_modules", "./dist"]
}
